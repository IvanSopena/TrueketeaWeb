@model List<VersionModel> 
@{
    string android = ViewBag.AndroidUsers;
    string ios = ViewBag.iOSUsers;
    //List<VersionModel> versions = ViewBag.Versions;

    
}

<div class="row">

            <div class="col-md-4 col-sm-4 ">
              <div class="x_panel tile fixed_height_320">
                <div class="x_title">
                  <h2>Versiones de la App</h2>
                
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">

                      @foreach( var item in Model)
                      {
                            <div class="widget_summary">
                            <div class="w_left w_25">
                              <span>@item.Version</span>
                            </div>
                            <div class="w_center w_55">
                              <div class="progress">
                                <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @item.TotalPercent%;">
                                
                                </div>
                              </div>
                            </div>
                            <div class="w_right w_20">
                              <span>@item.VersionCount</span>
                            </div>
                            <div class="clearfix"></div>
                          </div>
                         
                      }
                </div>
             </div> 
            </div>

            <div class="col-md-4 col-sm-4 ">
              <div class="x_panel tile fixed_height_320 overflow_hidden">
                <div class="x_title">
                  <h2>Dispositivos</h2>
                 
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <table class="" style="width:100%">
                    <tr>
                     
                    </tr>
                    <tr>
                      <td>
                        <canvas class="canvasDoughnut" id="Device" height="200" width="200" style="margin: 15px 10px 10px 20px"></canvas>
                         <script>
             
                                   var ctx = $("#Device").get(0).getContext("2d");

                                   var data = {
                                                labels: [
                                                    
                                                    "Android",
                                                    "IOS"
                                                ],
                                                datasets: [{
                                                    data: [@android, @ios],
                                                    backgroundColor: [
                                                        "#26B99A",
                                                        "#3498DB"
                                                    ],
                                                    hoverBackgroundColor: [
                                                        "#36CAAB",
                                                        "#49A9EA"
                                                    ]
                                                }]
                                        };

                                      var myPieChart = new Chart(ctx, {
                                        type: 'doughnut',
                                        data: data,
                                        options: {
                                            responsive: false,
                                            legend: false,
                                        }
                                   });

                         </script>
                      </td>
                      <td>
                        <table class="tile_info">
                          <tr>
                            <td>
                              <p><i class="fa fa-square blue"></i>iOS </p>
                            </td>
                            <td>@ios</td>
                          </tr>
                          <tr>
                            <td>
                              <p><i class="fa fa-square green"></i>Android </p>
                            </td>
                            <td>@android</td>
                          </tr>
                       
                        </table>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>


            <div class="col-md-4 col-sm-4 ">
              <div class="x_panel tile fixed_height_320">
                <div class="x_title">
                 <h2>Top 5 Categias </h2>
                
                  <div class="clearfix"></div>
                </div>
                <div class="dashboard-widget-content">
                    <div class="x_content">
                        
                        <canvas id="polarArea" style="margin-top:-27px;"></canvas>
                        <script>
                             var ctx = document.getElementById("polarArea");
                                var data = {
                                    datasets: [{
                                                data: [120, 50, 140, 180, 100],
                                                backgroundColor: [
                                                    "#455C73",
                                                    "#9B59B6",
                                                    "#BDC3C7",
                                                    "#26B99A",
                                                    "#3498DB"
                                                ],
                                                label: 'My dataset'
                                            }],
                                            labels: [
                                                "Moda",
                                                "Motor",
                                                "Bebés",
                                                "Libros",
                                                "Otros"
                                            ]
                                };

                                var polarArea = new Chart(ctx, {
                                    data: data,
                                    type: 'polarArea',
                                    options: {
                                        scale: {
                                            ticks: {
                                                beginAtZero: true
                                            }
                                        },
                                        legend: false
                                    }
                                });
                        </script>
                      
                  </div>
                 
                </div>
              </div>
            </div>

 </div> 


          