@{
     int errtotal = ViewBag.counterror;
     string Notify = ViewBag.countNotify;
    
}
<!-- Navegacion -->
        <div class="top_nav" >
          <div class="nav_menu" style="background: #0bbf2f; color: white">
              <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
              </div>
              <nav class="nav navbar-nav">
                  <ul class=" navbar-right" >
                    <li class="nav-item dropdown open" style="padding-left: 15px;">
                        <a class="NavItems" href="@Url.Action("Close", "Home")"><i id="envelope" class="fa fa-sign-out pull-right"></i></a>
                    </li>

                    <li role="presentation" class="nav-item dropdown open">
                      <a class="NavItems" href="@Url.Action("Errores", "CRUD")" >
                        <i id="envelope" class="fa fa-exclamation-triangle"></i>
                            
                        @{
                            if (@errtotal > 0)
                            {
                                 <span class="badge bg-red">@errtotal</span>
                            }
                        }

                           
                      </a>
                    </li>

                    <li role="presentation" class="nav-item dropdown open"  style="padding-right: 15px;">
                      <a class="NavItems" href="@Url.Action("Notify", "CRUD")" >
                        <i id="envelope" class="fa fa-bell"></i>
                            
                        @{
                            if (@errtotal > 0)
                            {
                                 <span class="badge bg-red">@Notify</span>
                            }
                        }

                           
                      </a>
                    </li>

                    
                   
                  </ul>
            </nav>
          </div>
        </div>
