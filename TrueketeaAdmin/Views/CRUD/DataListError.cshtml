@model List<LogErrorsModel>
@{
    ViewBag.Title = ViewBag.Titulo;
    string type = "" + ViewBag.Type;
    string code = "";
    if (@Model.Count >= 10)
    {
        code = "height: auto !important;";
    }
   else
   {
       code = "height: 100% !important; ";
   }
    
}

 

 <body class="nav-md">
    <div class="container body">
        <div class="main_container" >

            <partial name="MenuBar/MenuBar" />
            <partial name="TopNavigation/TopNavigation" />
 <!-- ***************************** contenido *********************************-->
            <div class="right_col" role="main" style="@code">
                <div>
                    <div class="page-title">
                        <div class="title_left">
                            <h3>LOG DE ERRORES</h3>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel"  >
                                <div class="x_title">
                                    <h2>Errores reportados por las aplicaciones</h2>

                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content"  >
                            
                                    @{

                                        if (@Model.Count > 0)
                                        {
                                            <table style="width:100% !important;" id="datatable" class="table table-striped table-hover table-bordered" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th id="Table_Title">ID</th>
                                                        <th id="Table_Title">Aplicación</th>
                                                        <th id="Table_Title">Metodo</th>
                                                         <th id="Table_Title">Clase</th>
                                                          <th id="Table_Title">Activo</th>
                                                        <th id="Table_Title">Acciones</th>
                                                    </tr>
                                            </thead>

                                            
                                            <tbody>

                                                  @foreach( var item in Model)
                                                  {
                                                      <tr>
                                                            <td style="text-align:center;">@item.ErrorId</td>
                                                            <td style="text-align:center;">@item.AppName</td>
                                                            <td style="text-align:center;">@item.Method</td>
                                                            <td style="text-align:center;">@item.Class</td>
                                                            <td style="text-align:center;">@item.Active</td>
                                                            <td style="text-align:center;">

                                                                <!--<a style="margin: 5px" class="btn btn-warning btn-sm" href="#">
                                                                   <i class="fa fa-pencil"></i>
                                                                    Editar
                                                                </a>-->
                                                                <a style="margin: 5px" class="btn btn-danger btn-sm" asp-route-id= "@item.ErrorId" asp-action = "ShowError" asp-controller = "CRUD">
                                                                     <i class="fa fa-eye"></i>
                                                                    Revisar
                                                                </a>
                                                            </td>
                                                      </tr>
                                                  }
                                                

                                            </tbody>
                                            </table>
                                        }
                                        else
                                        {
                                            <h2>No hay datos para mostrar</h2>
                                        }

                            
                            
                                    }
                                  
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
 <!-- ********************************************************************** -->
             @{
                                switch (type)
                                {
                                    case "Error":
                                        <partial name="Messages/Error"/>
                                        break;
                                    case "Success":
                                        <partial name="Messages/Success"/>
                                        break;
                                    case "Warning":
                                        <partial name="Messages/Warning"/>
                                        break;
                                    case "Info":
                                        <partial name="Messages/Info"/>
                                        break;
                                }
                            }
            <footer>
                <div class="text-center">

                    <div class="border-top pt-5">
                        <p class="copyright">

                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved |  <i class="icon-heart text-danger" aria-hidden="true"></i> by <a href="#" target="_blank">IS13Company</a>

                        </p>
                    </div>

                    <div class="footer__social">
                        <a href="#"><i class="fa fa-facebook-square"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-youtube-play"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-linkedin-square"></i></a>
                    </div>

                </div>
            </footer>

        </div>
    </div>


</body>